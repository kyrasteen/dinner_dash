
<%= form_for(:session, url: login_path, role: "form") do |f| %>
  <div id="login-form">
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div>
      <%= f.label :email_address %>
      <%= f.text_field :email_address %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :display_name %>
      <%= f.text_field :display_name, placeholder: "optional" %>
    </div>

    <%= f.hidden_field :role %>
    <%= f.submit "Check In", id: "check-in" %>
  </div>
<% end %>
