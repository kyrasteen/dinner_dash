<h1 class="item-title"><%= @item.name %></h1>

<p class="item-description"><%= @item.description %></p>

<p class="item-price"><%= number_to_currency(@item.price) %></p>

<figure class="default-pic">
  <%= image_tag("default_toast.jpg") %>
</figure>

<%= button_to  'Add to Cart', cart_path(item_id: @item) %>

<% if @item.retired? %>
  <p class="retired-item"><%= "#{@item.name} has been retired from the menu" %></p>
<% end %>
