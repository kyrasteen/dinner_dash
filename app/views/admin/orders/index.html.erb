<%= render "filter" %>

<div class="orders">
  <% @orders.each do |order| %>
    <div class="order" data-status="<%= order.status %>">
    <dl>
      <dt><%= link_to "Order ID: #{ order.id }" , admin_order_path(order) %> </dt>
      <dd class="order_status">Status: <%= order.status %></dd>
    </dl>
  </div>
  <% end %>
</div>
